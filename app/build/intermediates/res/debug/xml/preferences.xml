<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="@string/PREF_option_popularity"
        android:entries="@array/PREF_sort_titles"
        android:entryValues="@array/PREF_sort_choices"
        android:key="@string/PREF_sort_order_key"
        android:negativeButtonText="@string/cancel_button"
        android:positiveButtonText="@null"
        android:title="@string/PREF_sort_title" />

    <EditTextPreference
        android:defaultValue="@string/PREF_minimum_votes_default"
        android:inputType="text"
        android:key="@string/PREF_minimum_votes_key"
        android:singleLine="true"
        android:summary="@string/PREF_minimum_vote_summary"
        android:title="@string/PREF_minimum_votes_title" />

</PreferenceScreen>
